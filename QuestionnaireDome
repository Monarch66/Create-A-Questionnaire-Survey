package CreateSurvey;
import java.awt.BorderLayout;
import java.awt.Dimension;
import java.awt.FileDialog;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.io.File;
import java.util.ArrayList;

import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;
import javax.swing.JPanel;
import javax.swing.JRadioButton;
import javax.swing.JScrollPane;
import javax.swing.JTextField;
import javax.swing.JToolBar;

import mspaint.MainGUI;


public class QuestionnaireDome extends JFrame{
	JPanel optionpanel=new JPanel();	
	ArrayList<String> radiostring=new ArrayList<String>();
	ArrayList<String> multiplestring=new ArrayList<String>();
	String qatitle;
	
	public QuestionnaireDome(){
		this.setDefaultCloseOperation(3);
		this.setTitle("调查问卷创建软件");
		this.setBounds(1, 1, 400, 400);
		
		optionpanel.setLayout(new GridLayout(0, 1));
		optionpanel.setPreferredSize(new Dimension(500,300));
		JScrollPane scrollpane=new JScrollPane(optionpanel);
		scrollpane.setHorizontalScrollBarPolicy(JScrollPane.HORIZONTAL_SCROLLBAR_ALWAYS);
		scrollpane.setVerticalScrollBarPolicy(JScrollPane.VERTICAL_SCROLLBAR_ALWAYS);
		scrollpane.setWheelScrollingEnabled(true);
		this.add(scrollpane);
		scrollpane.setBounds(0,0,500,300);
		this.getContentPane().add(scrollpane,BorderLayout.CENTER);
		addMenu();
		addToolbox();
		
	}
	
	private void addToolbox() {
		JToolBar toolbox=new JToolBar();
		JButton radioBtn=new JButton("单选框");
		
		radioBtn.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				OptionDemo radiooption=new OptionDemo("设置单选内容",radiostring);
			}	
		});
		JButton addradioBtn=new JButton("添加单选框");
		addradioBtn.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				JLabel questiontitle=new JLabel(radiostring.get(0));
				optionpanel.add(questiontitle);
				for(int i=1;i<=radiostring.size();i++){
					JRadioButton radiobtn=new JRadioButton(radiostring.get(i));
					System.out.println(i+radiostring.get(i)+"   "+i);
					optionpanel.add(radiobtn);
					if(i==radiostring.size()-1){
						radiostring.clear();						
					}
				}
			}	
		});
		
		JButton multipleBtn=new JButton("多选框");
		multipleBtn.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				OptionDemo multipleoption=new OptionDemo("设置多选内容",multiplestring);
			}
		});
		JButton addmultipleBtn=new JButton("添加多选框");
		addmultipleBtn.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				JLabel questiontitle=new JLabel(multiplestring.get(0));
				optionpanel.add(questiontitle);
				for(int i=1;i<=multiplestring.size();i++){
					JCheckBox radiobtn=new JCheckBox(multiplestring.get(i));
					System.out.println(i+multiplestring.get(i)+"   "+i);
					optionpanel.add(radiobtn);
					if(i==multiplestring.size()-1){
						multiplestring.clear();						
					}
				}
			}	
		});
		
		JButton questionBtn=new JButton("提问框");
		questionBtn.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				JTextField question=new JTextField("请输入需要设置的问题");
				JTextField answer=new JTextField("请输入回答");
				optionpanel.add(question);
				optionpanel.add(answer);
				
			}	
		});
		
		toolbox.add(radioBtn);
		toolbox.add(addradioBtn);
		toolbox.add(multipleBtn);
		toolbox.add(addmultipleBtn);
		toolbox.add(questionBtn);
		
		this.getContentPane().add(toolbox,BorderLayout.NORTH);
	}

	private void addMenu() {
		JMenuBar menu=new JMenuBar();
		JMenu fileMenu=new JMenu("文件");
		this.setJMenuBar(menu);
		menu.add(fileMenu);
		
		JMenuItem newfile=new JMenuItem("新建");
		JMenuItem savefile=new JMenuItem("保存");
		JMenuItem buildfile=new JMenuItem("生成");
		JMenuItem openfile=new JMenuItem("打开");
		
		fileMenu.add(newfile);
		fileMenu.add(openfile);
		fileMenu.add(savefile);
		fileMenu.add(buildfile);
		
	}


	public static void main(String[] args){
		QuestionnaireDome ques=new QuestionnaireDome();
		ques.setVisible(true);
		
		
		
	}
}
